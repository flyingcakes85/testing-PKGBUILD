pkgname=endeavouros-ce-bspwm
pkgver=1.0
pkgrel=1
pkgdesc='Default EndeavourOS Community Edition bspwm config files'
arch=('any')
url='https://www.endeavouros.com'
license=('GPL3')
source=("${pkgname}-${pkgver}.${pkgrel}.tar.gz::https://github.com/EndeavourOS-Community-Editions/bspwm/archive/${pkgver}.${pkgrel}.tar.gz")
sha512sums=('SKIP')

package() {
    install -dm 755 $pkgdir/etc/skel
    cp -r --no-preserve=ownership ${pkgname}-${pkgver}.${pkgrel}/etc/skel $pkgdir/etc/
}
